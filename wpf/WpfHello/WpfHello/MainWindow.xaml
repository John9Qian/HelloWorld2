        xmlns:local="clr-namespace:WpfHello"
        xmlns:Properties="clr-namespace:WpfHello.Properties" x:Class="WpfHello.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.ContextMenu>
        <ContextMenu FontWeight="ExtraLight"/>
    </Window.ContextMenu>
    <Grid>
        <Button Content="Hello" HorizontalAlignment="Left" Margin="370,329,0,0" VerticalAlignment="Top" Width="75" ClickMode ="Press" Cursor="None">
            <Button.DataContext>
                <Properties:Resources/>
            </Button.DataContext>
        </Button>
        <Label Content="Hello World" HorizontalAlignment="Left" Margin="370,248,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
